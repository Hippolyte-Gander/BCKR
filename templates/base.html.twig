            <section class="partenaires">

                <h5>Merci à ceux qui nous soutiennent !</h5>
                <div class="barre-sous-titre"></div>

                <article class="bandeau-partenaires">
                    <div class="liste-partenaires">
                        <a class="card-partenaire" href="http://www.rottelsheim.fr/" target="_blank">
                            <img src="{{ asset('img/homepage/Blason_Rottelsheim.webp')}}" alt="Blason de la mairie de Rottelsheim">
                            <p>Mairie de Rottelsheim</p>
                        </a>
                        <a class="card-partenaire" href="https://www.agglo-haguenau.fr/commune/kriegsheim/" target="_blank">
                            <img src="{{ asset('img/homepage/Blason_Kriegsheim.webp')}}" alt="Blason de la mairie de Kriegsheim">
                            <p>Mairie de Kriegsheim</p>
                        </a>
                    </div>
                    <div class="liste-partenaires">
                        <a class="card-partenaire" href="https://www.facebook.com/LardesportsIllkirch.fr/?locale=fr_FR" target="_blank">
                            <img src="{{ asset('img/homepage/lardesport.webp')}}" alt="logo de la marque LardeSports">
                            <p>Lardesport</p>
                        </a>
                    </div>
                </article>
            </section>
    

            <section class="liens-footer">
                <div class="liens-internes">
                    <a href="#" class="texte-footer">Retour en haut</a>
                    <a href="{{ path('app_home') }}" class="texte-footer">Accueil</a>
                    <a href="{{ path('mentions_home') }}" class="texte-footer">Mentions légales</a>
