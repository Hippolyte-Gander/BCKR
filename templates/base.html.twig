            <link rel="stylesheet" href="{{ asset('css/style.css')}}">
        {% endblock %}
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
        {% endblock %}
        {# {{ knp_pagination_rel_links(pagination) }} #}
    </head>
